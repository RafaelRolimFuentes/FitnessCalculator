<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Nutricao.ButtonForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:background">@drawable/background_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.Nutricao.InputLayoutEditTextForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="Theme.Nutricao.InputEditTextForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.Nutricao.TextViewImcTmbForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>


    </style>


</resources>