<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wallpaper_branco_claro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_logo"
        android:src="@drawable/main_logotipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_imc"
        android:text="@string/imc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_logo"
        style="@style/Theme.Nutricao.ButtonForm"
        />

    <Button
        android:id="@+id/btn_tmb"
        android:text="@string/tmb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_imc"
        android:layout_marginTop="10dp"
        style="@style/Theme.Nutricao.ButtonForm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>